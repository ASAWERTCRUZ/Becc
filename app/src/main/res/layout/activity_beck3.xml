                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@color/seccionTitulo" />

        <RadioGroup
                android:id="@+id/radioGroupInutilidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
