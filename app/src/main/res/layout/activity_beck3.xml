<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Pregunta 15: Cambios en el sueño -->
        <TextView
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cambios_en_el_sue_o"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@color/seccionTitulo" />

        <RadioGroup
                android:id="@+id/radioGroupSueno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RadioButton
                    android:id="@+id/pregunta15Radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No tengo ningún cambio en mi patrón de sueño"
                    android:textSize="16sp" />

            <RadioButton
                    android:id="@+id/pregunta15Radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/duermo_un_poco_menos_de_lo_habitual_pero_no_lo_encuentro_inc_modo"
                    android:textSize="16sp" />

            <RadioButton
                    android:id="@+id/pregunta15Radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/duermo_menos_de_lo_habitual_y_a_veces_tengo_problemas_para_conciliar_el_sue_o"
                    android:textSize="16sp" />

            <RadioButton
                    android:id="@+id/pregunta15Radio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Me despierto mucho antes de lo que solía hacerlo y a veces tengo problemas para volver a dormir"
                    android:textSize="16sp" />
        </RadioGroup>

        <!-- Pregunta 16: Fatiga -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Fatiga"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@color/seccionTitulo" />

        <RadioGroup
                android:id="@+id/radioGroupFatiga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RadioButton
                    android:id="@+id/pregunta16Radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No me siento más cansado/a de lo habitual"
                    android:textSize="16sp" />

            <RadioButton
                    android:id="@+id/pregunta16Radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Me canso más fácilmente que de costumbre"
                    android:textSize="16sp" />

            <RadioButton
                    android:id="@+id/pregunta16Radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
