                    android:textSize="16sp" />

            <RadioButton
                    android:id="@+id/pregunta17Radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Me siento bastante culpable la mayor parte del tiempo"
                    android:textSize="16sp" />

